<div class="container">
  <div class="slides banner-container">
     <div class="banner-text">
        <h1>My best watch List</h1>
        <p>
          <span id="banner-typed-text" ></span>
        </p>
      </div>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://picsum.photos/id/318/1200/800"alt="Eifel Tower">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://picsum.photos/id/91/1200/800" alt="camera">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://picsum.photos/id/43/1200/800" alt="Bridge">
        </div>
      </div>
    </div>
  </div>


<div>
  <h2 class="text-center my-5">All lists</h2>
 <!--  <%= link_to 'Create a new list', lists_path, class:"hidden-form" %> -->
  <div class="d-flex justify-content-end rounded mb-3"><%= link_to "Create a list", new_list_path, class:"btn btn-success" %></div>
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <h3> <%= link_to list.name, list_path(list.id) %></h3>
        </div>
      <% end %>
    </div>
  </div>
